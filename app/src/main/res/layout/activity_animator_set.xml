<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="顺序播放动画"
        android:id="@+id/playSequentially"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_toEndOf="@+id/playSequentially"
        android:text="一起播放动画"
        android:id="@+id/playTogether"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:layout_toEndOf="@+id/playTogether"
        android:text="builder定义动画顺序"
        android:id="@+id/builder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/text1"
        android:text="取消动画"
        android:id="@+id/cancel_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:background="#ffff00"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playSequentially"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="39dp"
        android:text="text1"
        android:textSize="20sp" />

    <TextView
        android:background="#00ff00"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playSequentially"
        android:layout_marginStart="79dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@id/text1"
        android:text="text2"
        android:textSize="20sp" />

</RelativeLayout>